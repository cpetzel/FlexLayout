<?xml version="1.0" encoding="utf-8"?>
<com.github.mmin18.widget.FlexLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecebedff">

    <ImageView
        android:id="@+id/logo"
        android:alpha="1.0"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        app:layout_height="100%"
        app:layout_width="100%" />

    <ImageView
        android:id="@+id/kitty"
        android:src="@drawable/kitty"
        app:layout_centerX="50%"
        app:layout_height="6%"
        app:layout_left="50% - this.width/2"
        app:layout_top="5%"
        app:layout_width="85%" />

    <View
        android:id="@+id/textCard"
        android:background="@android:color/white"
        app:layout_height="this.width*0.7"
        app:layout_left="50% - this.width/2"
        app:layout_top="kitty.top + kitty.height + 18%"
        app:layout_width="82%" />

    <ImageView
        android:id="@+id/profile"
        android:src="@drawable/dude"
        app:layout_height="this.width"
        app:layout_left="50% - this.width/2"
        app:layout_top="textCard.top - this.height/2"
        app:layout_width="textCard.width * .4" />


    <View
        android:id="@+id/creditCircle"
        android:background="#f2724f"
        app:layout_height="this.width"
        app:layout_left="50% + profile.width*.25 - this.width*.25"
        app:layout_top="profile.top + profile.height*.25 - this.height*.75"
        app:layout_width="profile.width *.35" />

    <TextView
        android:gravity="center"
        android:text="20$"
        android:textSize="13dp"
        app:layout_height="creditCircle.height"
        app:layout_left="creditCircle.left"
        app:layout_top="creditCircle.top"
        app:layout_width="creditCircle.width" />

    <Button
        android:id="@+id/secondaryCta"
        android:background="#000000"
        android:gravity="center"
        android:text="Connect with Facebook"
        android:textColor="#d3d9dc"
        android:textSize="14dp"
        app:layout_height="50dp"
        app:layout_left="50% - this.width/2"
        app:layout_top="100% - this.height -16dp"
        app:layout_width="82%" />

    <Button
        android:id="@+id/primaryCta"
        android:background="#22b6e7"
        android:gravity="center"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_height="50dp"
        app:layout_left="50% - this.width/2"
        app:layout_top="secondaryCta.top - this.height - 16dp"
        app:layout_width="82%" />

    <TextView
        android:id="@+id/subtitle"
        android:gravity="center"
        android:text="Sign up to claim your credit!"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_height="40dp"
        app:layout_left="50% - this.width/2"
        app:layout_top="primaryCta.top - this.height - 4%"
        app:layout_width="84%" />

    <TextView
        android:id="@+id/cardHeader"
        android:gravity="center"
        android:text="Ben gave you $20"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_height="24dp"
        app:layout_left="50% - this.width/2"
        app:layout_top="profile.top + profile.height + 3%"
        app:layout_width="80%" />

    <TextView
        android:id="@+id/cardBody"
        android:gravity="center"
        android:text="towards your first Kitty Clothes purchase!"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_height="44dp"
        app:layout_left="50% - this.width/2"
        app:layout_top="cardHeader.top + cardHeader.height + 1%"
        app:layout_width="200dp" />
</com.github.mmin18.widget.FlexLayout>